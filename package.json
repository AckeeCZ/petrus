{
    "name": "@ackee/petrus",
    "version": "4.0.0-beta.0",
    "description": "A module that handles authentication logic with token based flow.",
    "main": "lib/index.js",
    "module": "es/index.js",
    "sideEffects": false,
    "scripts": {
        "prettier": "prettier --config ./prettier.config.js --write './src/**/*.{js,jsx}'",
        "build:lib": "rm -rf ./lib && cross-env BABEL_ENV=lib babel src --out-dir lib",
        "build:es": "rm -rf ./es && cross-env BABEL_ENV=es babel src --out-dir es",
        "build": "yarn build:es && yarn build:lib",
        "prepare": "yarn build",
        "start": "yarn install && yarn lint && yarn build && onchange 'src/**/*.{js,jsx}' -- yarn build",
        "lint": "eslint 'src/**/*.{js,jsx}'",
        "size": "package-size ./es --no-cache",
        "test": "BABEL_ENV=test jest"
    },
    "author": "Jiri Smolik <smolikjirka@gmail.com>",
    "contributors": [
        "Marek Janča <marek.janca@ackee.cz>",
        "Lukáš Horák <lukas.horak@ackee.cz>",
        "Jiří Čermák <jiri.cermak@ackee.cz>"
    ],
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/AckeeCZ/petrus"
    },
    "dependencies": {
        "@ackee/redux-utils": "2.0.0-alpha.2",
        "@babel/runtime": "7.4.x",
        "idb": "4.0.x",
        "react-display-name": "0.2.x"
    },
    "peerDependencies": {
        "react": "16.x",
        "react-redux": "7.x",
        "redux": "4.x",
        "redux-saga": "0.x",
        "reselect": "4.x"
    },
    "devDependencies": {
        "@babel/cli": "7.x",
        "@babel/core": "7.4.x",
        "@babel/plugin-proposal-class-properties": "7.x",
        "@babel/plugin-proposal-export-namespace-from": "7.x",
        "@babel/plugin-proposal-object-rest-spread": "7.x",
        "@babel/plugin-transform-runtime": "7.x",
        "@babel/preset-env": "7.x",
        "@babel/preset-react": "7.x",
        "babel-eslint": "10.x",
        "babel-jest": "24.x",
        "babel-plugin-module-resolver": "^3.2.0",
        "babel-plugin-transform-imports": "1.5.x",
        "cross-env": "5.x",
        "enzyme": "3.9.x",
        "enzyme-adapter-react-16": "1.12.x",
        "eslint": "5.16.x",
        "eslint-config-ackee": "0.9.x",
        "eslint-config-prettier": "4.1.x",
        "eslint-import-resolver-webpack": "0.11.x",
        "eslint-plugin-import": "2.17.x",
        "eslint-plugin-jest": "22.5.x",
        "husky": "1.3.x",
        "jest": "24.7.x",
        "lint-staged": "8.1.x",
        "onchange": "5.2.x",
        "package-size": "^2.3.0",
        "prettier": "1.17.x",
        "prettier-config-ackee": "0.0.x",
        "react": "16.8.x",
        "react-redux": "7.0.x",
        "redux": "4.0.x",
        "redux-saga": "^1.0.2",
        "reselect": "4.0.x",
        "webpack": "4.30.x"
    },
    "browserslist": [
        "last 2 version",
        "> 1%",
        "maintained node versions",
        "not dead",
        "IE > 11"
    ],
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "pre-push": "yarn lint"
        }
    },
    "lint-staged": {
        "*.{js,jsx,json,scss,less,css,md}": [
            "prettier --config ./prettier.config.js --write && yarn lint",
            "git add"
        ]
    },
    "publishConfig": {
        "access": "public"
    }
}
