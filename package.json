{
    "name": "@ackee/petrus",
    "version": "3.0.11",
    "description": "The library aims to handle authentication logic with token based flow.",
    "main": "lib/index.js",
    "module": "es/index.js",
    "scripts": {
        "prettier": "prettier --config ./prettier.config.js --write './src/**/*.{js,jsx}'",
        "build:lib": "rm -rf ./lib && cross-env BABEL_ENV=lib babel src --out-dir lib",
        "build:es": "rm -rf ./es && cross-env BABEL_ENV=es babel src --out-dir es",
        "build": "yarn run build:es & npm run build:lib",
        "prepare": "npm run build",
        "start": "yarn install && yarn lint && yarn build && onchange 'src/**/*.{js,jsx}' -- yarn build",
        "lint": "eslint 'src/**/*.{js,jsx}'"
    },
    "author": "Jiri Smolik <smolikjirka@gmail.com>",
    "contributors": [
        "Marek Janča <marek.janca@ackee.cz>",
        "Lukáš Horák <lukas.horak@ackee.cz>",
        "Jiří Čermák <jiri.cermak@ackee.cz>"
    ],
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/AckeeCZ/petrus"
    },
    "dependencies": {
        "@babel/runtime": "^7.2.0",
        "localforage": "^1.7.3",
        "react-display-name": "^0.2.4"
    },
    "peerDependencies": {
        "react": "16.x",
        "react-redux": "6.x.x",
        "redux": "4.x.x",
        "redux-saga": "0.x.x"
    },
    "devDependencies": {
        "@babel/cli": "^7.2.0",
        "@babel/core": "^7.2.0",
        "@babel/plugin-proposal-class-properties": "^7.2.1",
        "@babel/plugin-proposal-export-namespace-from": "^7.2.0",
        "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
        "@babel/plugin-transform-runtime": "^7.2.0",
        "@babel/preset-env": "^7.2.0",
        "@babel/preset-react": "^7.0.0",
        "babel-eslint": "^10.0.1",
        "cross-env": "^5.2.0",
        "eslint": "^5.10.0",
        "eslint-config-ackee": "^0.9.0",
        "eslint-config-prettier": "^3.3.0",
        "husky": "^1.2.0",
        "lint-staged": "^8.1.0",
        "onchange": "^5.2.0",
        "prettier": "^1.15.3",
        "prettier-config-ackee": "0.0.5",
        "react": "^16.6.3",
        "react-redux": "^6.0.0",
        "redux": "^4.0.1",
        "redux-saga": "^0.16.2"
    },
    "browserslist": [
        "last 2 version",
        "> 1%",
        "maintained node versions",
        "not dead",
        "IE > 11"
    ],
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,jsx,json,scss,less,css,md}": [
            "prettier --config ./prettier.config.js --write && yarn lint",
            "git add"
        ]
    },
    "publishConfig": {
        "access": "public"
    }
}
