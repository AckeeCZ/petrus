{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "strict": true,
        "jsx": "react-jsx",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "moduleResolution": "node",
        "noEmit": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "baseUrl": "./src",
        "importsNotUsedAsValues": "error",
        "skipLibCheck": true,
        "noUnusedLocals": true
    },
    "include": ["src"],
    "typedocOptions": {
        "entryPoints": ["./src/index.ts"],
        "out": "petrus.wiki",
        "hideGenerator": true,
        "includeVersion": true,
        "githubPages": true,
        "pretty": true,
        "media": "./media",
        "excludeInternal": true,
        "cleanOutputDir": false,
        "theme": "github-wiki"
    }
}
